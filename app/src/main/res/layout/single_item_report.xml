<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="Submitted By:"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/tvrpUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
          android:fontFamily="@font/nunito_regular"      android:gravity="start"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Email User:"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/tvrpUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito_regular"      android:gravity="start"
                android:layout_marginRight="10dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Subject:"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold" />

            <TextView
                android:id="@+id/tvrpSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"      android:gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Message :"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:fontFamily="@font/nunito_bold" />
            <TextView
                android:id="@+id/tvrpMessage"
                android:fontFamily="@font/nunito_regular"      android:gravity="start"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="106dp" />

<!--
            <TextView
                android:id="@+id/tvrpMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:padding="8dp" />
-->
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>