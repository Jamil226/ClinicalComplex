<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWorkShopList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" />

    <TextView
        android:id="@+id/tvNothingToShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nothing to Show."
        android:visibility="gone"
        android:textColor="#000"
        android:textSize="25sp"
        android:fontFamily="@font/nunito_bold"
        app:layout_constraintBottom_toBottomOf="@+id/rvWorkShopList"
        app:layout_constraintEnd_toEndOf="@+id/rvWorkShopList"
        app:layout_constraintStart_toStartOf="@+id/rvWorkShopList"
        app:layout_constraintTop_toTopOf="@+id/rvWorkShopList" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAddWorkShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_input_add" />

    <ProgressBar
        android:id="@+id/pbFragmentProposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rvWorkShopList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rvWorkShopList" />
</androidx.constraintlayout.widget.ConstraintLayout>
